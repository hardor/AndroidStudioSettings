<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:columnCount="2"
    app:orientation="horizontal"
    app:rowCount="3">

    <TextView
        android:id="@+id/ranobeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textSize="@dimen/title.text.size"
        app:layout_columnSpan="2"
        app:layout_gravity="start"
        app:layout_row="0"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:contentDescription="@string/logo"
        app:layout_column="0"
        app:layout_gravity="start"
        app:layout_row="1"
        app:layout_rowSpan="2"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_chapter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:isScrollContainer="false"
        app:layout_column="1" app:layout_row="1"/>

    <TextView
        android:id="@+id/ranobeUpdateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="@dimen/last.updated.text.size"
        app:layout_column="1"
        app:layout_gravity="bottom|start"
        app:layout_row="2"/>


</android.support.v7.widget.GridLayout>
