<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="@string/pref_header_general"/>

  <SwitchPreference
    android:defaultValue="false"
    android:key="@string/pref_general_auto_save"
    android:summaryOff="@string/summary_save_text_off"
    android:summaryOn="@string/summary_save_text_on"
    android:title="@string/auto_save_text"/>

  <SwitchPreference
    android:defaultValue="false"
    android:key="@string/pref_general_app_theme"
    android:summaryOff="@string/summary_dark_theme_on"
    android:summaryOn="@string/summary_dark_theme_off"
    android:title="@string/app_theme"/>

  <ru.profapp.RanobeReaderTest.CustomElements.NumberPickerPreference
    android:defaultValue="16"
    android:key="@string/pref_general_text_size"
    android:summary="@string/select_text_size"
    android:title="@string/text_size"/>

  <SwitchPreference
    android:defaultValue="true"
    android:key="@string/pref_general_send_reports"
    android:summaryOff="@string/summary_send_reports_on"
    android:summaryOn="@string/summary_send_reports_off"
    android:title="@string/send_crash_reports"/>


</PreferenceScreen>
