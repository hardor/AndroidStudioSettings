<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general"/>
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_general_hide_chapter"
        android:summaryOff="@string/show_all_chapter"
        android:summaryOn="@string/show_only_readable"
        android:title="@string/hide_unavailable_chapters" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_general_auto_save"
        android:summaryOff="@string/auto_save_text_off"
        android:summaryOn="@string/auto_save_text_on"
        android:title="@string/auto_save_text" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_general_app_theme"
        android:summaryOff="@string/Turn_on_dark_theme"
        android:summaryOn="@string/Turn_off_dark_theme"
        android:title="@string/app_theme" />

    <ru.profapp.RanobeReader.CustomElements.NumberPickerPreference
        android:defaultValue="16"
        android:key="@string/pref_general_text_size"
        android:summary="@string/select_text_size"
        android:title="@string/text_size" />


</PreferenceScreen>
