<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="@string/pref_header_general"/>

  <SwitchPreference
    android:defaultValue="false"
    android:key="@string/pref_general_app_theme"
    android:summaryOff="@string/summary_dark_theme_on"
    android:summaryOn="@string/summary_dark_theme_off"
    android:title="@string/app_theme"/>

  <SwitchPreference
    android:defaultValue="false"
    android:key="@string/pref_general_volume_scroll"
    android:summaryOff="@string/summary_volume_scroll_on"
    android:summaryOn="@string/summary_volume_scroll_off"
    android:title="@string/volume_scroll"/>

  <SwitchPreference
    android:defaultValue="false"
    android:key="@string/pref_general_auto_bookmark"
    android:summaryOff="@string/summary_auto_bookmark_off"
    android:summaryOn="@string/summary_auto_bookmark_on"
    android:title="@string/auto_bookmark"/>

